---
interface Props {
  type: 'website' | 'article';
  title: string;
  description: string;
  url: string;
  image?: string;
  datePublished?: string;
  dateModified?: string;
  author?: string;
}

const { type, title, description, url, image, datePublished, dateModified, author = '허균' } = Astro.props;

const websiteSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'Kyun2da Blog',
  url: 'https://kyun2da.dev',
  description: '허균의 개발 블로그',
  author: {
    '@type': 'Person',
    name: '허균',
    url: 'https://kyun2da.dev/about'
  }
};

const articleSchema = {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: title,
  description: description,
  url: url,
  image: image,
  datePublished: datePublished,
  dateModified: dateModified || datePublished,
  author: {
    '@type': 'Person',
    name: author,
    url: 'https://kyun2da.dev/about'
  },
  publisher: {
    '@type': 'Person',
    name: '허균',
    url: 'https://kyun2da.dev'
  },
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': url
  }
};

const schema = type === 'article' ? articleSchema : websiteSchema;
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />

---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BackToTop from '../components/BackToTop.astro';
import EasterEgg from '../components/EasterEgg.astro';
import ReadingStreak from '../components/ReadingStreak.astro';
import CommandPalette from '../components/CommandPalette.astro';
import ImageLightbox from '../components/ImageLightbox.astro';
import TextHighlightShare from '../components/TextHighlightShare.astro';
import FootnotePreview from '../components/FootnotePreview.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = '허균의 블로그', ogImage } = Astro.props;
const isProd = import.meta.env.PROD;
---

<!doctype html>
<html lang="ko" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Kyun2da Blog</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#3b82f6" />
    <link rel="apple-touch-icon" href="/icon-192.png" />

    <!-- KaTeX CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.0/dist/katex.min.css" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    {ogImage && <meta property="og:image" content={ogImage} />}

    <!-- View Transitions -->
    <ViewTransitions />

    <!-- Dark Mode Script -->
    <script is:inline>
      const theme = localStorage.getItem('theme') ||
        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.classList.toggle('dark', theme === 'dark');
    </script>
  </head>
  <body class="bg-background text-foreground min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />

    <!-- Global Components -->
    <BackToTop />
    <ReadingStreak />
    <EasterEgg />
    <CommandPalette />
    <ImageLightbox />
    <TextHighlightShare />
    <FootnotePreview />

    <!-- Vercel Analytics (production only) -->
    {isProd && (
      <script>
        import { inject } from '@vercel/analytics';
        inject();
      </script>
    )}
  </body>
</html>

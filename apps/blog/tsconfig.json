{
  "extends": "../../tsconfig.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@layouts/*": ["./src/layouts/*"],
      "@utils/*": ["src/utils/*"],
      "@components/*": ["./src/components/*"],
      "@pages/*": ["./src/pages/*"],
      "@interfaces/*": ["./src/interfaces/*"]
    },
    "noEmit": true,
    "incremental": true,
    "types": ["@types/gtag.js"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  }
}

{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "RESEND_API_KEY",
    "RESEND_AUDIENCE_ID",
    "NEWSLETTER_ADMIN_SECRET"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "dependsOn": [],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
